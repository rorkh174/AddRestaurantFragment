<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRestaurantFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etNameAddRestaurantFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="77dp"
            android:ems="10"
            android:hint="name"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etDescAddRestaurantFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="description"
            android:inputType="textMultiLine"
            app:layout_constraintStart_toStartOf="@+id/etNameAddRestaurantFragment"
            app:layout_constraintTop_toBottomOf="@+id/etNameAddRestaurantFragment" />

        <EditText
            android:id="@+id/etAddressAddRestaurantFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:ems="10"
            android:hint="address"
            android:inputType="textPostalAddress"
            app:layout_constraintStart_toStartOf="@+id/etDescAddRestaurantFragment"
            app:layout_constraintTop_toBottomOf="@+id/etDescAddRestaurantFragment" />

        <EditText
            android:id="@+id/etPhoneAddRestaurantFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:ems="10"
            android:hint="phone"
            android:inputType="phone"
            app:layout_constraintStart_toStartOf="@+id/etAddressAddRestaurantFragment"
            app:layout_constraintTop_toBottomOf="@+id/etAddressAddRestaurantFragment" />

        <Button
            android:id="@+id/btnAddRestaurantFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:text="Add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPhoneAddRestaurantFragment" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>